<mujocoinclude model="airbot_arm_manipulation_otd scene">

    <statistic center="0.3 0 0.4" extent="0.8"/>

    <visual>
      <headlight diffuse="0.6 0.6 0.6" ambient="0.1 0.1 0.1" specular="0 0 0"/>
      <rgba haze="0.15 0.25 0.35 1"/>
      <global azimuth="120" elevation="-20"/>
    </visual>

    <asset>
      <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
      <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3"
        markrgb="0.8 0.8 0.8" width="300" height="300"/>
      <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>
    </asset>

    <worldbody>
        <!-- Light -->
<!--        <light diffuse=".5 .5 .5" pos="0 0 3" dir="0 0 -1"/>-->
        <light pos="0 0 1.5" dir="0 0 -1" directional="true"/>

        <!-- floor -->
        <geom name="floor" size="0 0 0.05" type="plane" material="groundplane"/>

        <!-- wall -->
        <body name="wall" pos="0.4 0.5 0.5">
            <geom type="box" size="0.01 0.25 0.5" rgba="0.2 0.3 0.5 0.9"/>
        </body>

        <!-- Door -->
        <body name="door" pos="0.4 0 0.5">
            <inertial pos="0 0 0" mass="0.5" diaginertia="0.001 0.001 0.001" />
            <joint name="joint_door" class="Door" type="hinge" frictionloss="0.01" pos="0.0 0.25 0.0" axis="0 0 1" limited="true" range="0 1.57" />
            <geom type="box" size="0.01 0.25 0.3" rgba="0.5 0.5 0.5 0.8"/>

            <body name="door_handle" pos="-0.02 -0.16 0.1">
                <geom type="box" size="0.03 0.01 0.01" rgba="0.5 0.5 0.5 1"/>
                <inertial mass="0.001" pos="0 0 0" diaginertia="0.001 0.001 0.001"/>
            </body>
        </body>

        <!-- 附加物体 -->
        <body name="box_additional" pos="-0.1 -0.5 0.2">
            <geom type="box" size="0.09 0.1 0.205" rgba="0.7 0.3 0.5 0.2"/>
            <inertial pos="0 0 0" mass="1000" diaginertia="0.002 0.002 0.002" />
        </body>

    </worldbody>

</mujocoinclude>